<Window x:Class="gbtis.AdminWindow" x:Name="adminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gbtis"
        mc:Ignorable="d"
        
        Closing="FileExit_Click"
        Title="Admininstration" Height="600" Width="800">
    <Grid>

        <DockPanel LastChildFill="False">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem x:Name="fileExitButton" x:FieldModifier="public"  Header="_Exit" Click="FileExit_Click" />
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem x:Name="helpAboutButton" x:FieldModifier="public" Header="_About" Click="HelpAbout_Click" />
                </MenuItem>
            </Menu>

            <DockPanel DockPanel.Dock="Top">
                <GroupBox Header="Controls" HorizontalAlignment="Left" Margin="10" Padding="5">
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="3" />
                            </Style>
                        </StackPanel.Resources>

                        <Button x:Name="returnToStandbyButton" x:FieldModifier="public" Content="Return to Standby" Click="ReturnToStandby_Click" />
                    </StackPanel>
                </GroupBox>
            </DockPanel>

            <StatusBar x:Name="statusBar" DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock x:Name="statusText" Text="Loading..."/>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
    </Grid>
</Window>
