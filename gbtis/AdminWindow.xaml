<Window x:Class="gbtis.AdminWindow" x:Name="adminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gbtis"
        mc:Ignorable="d"
        
        Closing="FileExit_Click"
        Title="Admininstration" Height="600" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem x:Name="fileStandbyButton" x:FieldModifier="public"  Header="_Return To Standby" Click="FileStandby_Click" />
                    <MenuItem x:Name="fileInputButton" x:FieldModifier="public"  Header="_Start Input" Click="FileInput_Click" />
                    <Separator />
                    <MenuItem x:Name="fileExitButton" x:FieldModifier="public"  Header="_Exit" Click="FileExit_Click" />
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem x:Name="helpAboutButton" x:FieldModifier="public" Header="_About" Click="HelpAbout_Click" />
                </MenuItem>
            </Menu>

            <StatusBar x:Name="statusBar" DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock x:Name="statusText" Text="Loading..."/>
                </StatusBarItem>
            </StatusBar>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel>
                    <GroupBox Header="Events" VerticalAlignment="Top" Margin="2.5">
                        <StackPanel>
                            <DockPanel LastChildFill="True" Margin="2.5">
                                <Button Padding="2" DockPanel.Dock="Right" Content="Delete Current Event" Foreground="Red" Margin="2.5" Click="DeleteEvent_Click" />
                                <ComboBox x:Name="eventsBox" SelectionChanged="Event_Selected" Margin="2.5" />
                            </DockPanel>

                            <DockPanel LastChildFill="True" Margin="2.5">
                                <Button Padding="2" Content="Add" DockPanel.Dock="Right" Click="NewEvent_Click" />
                                <TextBox x:Name="txtEvent" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,5,0" />
                            </DockPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Names" Margin="2.5">
                        <StackPanel>
                            <ListBox x:Name="pendingBox" SelectionMode="Single" FontWeight="Bold" BorderThickness="1,1,1,0" />
                            <ListBox x:Name="namesBox" SelectionChanged="namesBox_SelectionChanged" SelectionMode="Single" BorderThickness="1,0,1,1" />
                            <DockPanel LastChildFill="False">
                                <Button x:Name="deleteNameButton" Padding="2" Content="Remove Selected" Click="DeleteName_Click" />
                                <Button x:Name="approveNameButton" Padding="2" Content="Approve Selected" Click="ApproveName_Click" />
                            </DockPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

                <local:BodyCounter x:Name="bodies" Grid.Column="1" Grid.Row="0" />
                <Border Background="DarkBlue" BorderThickness="1,1,0,0" BorderBrush="Black" Grid.Column="1" Grid.Row="1">
                    <Image x:Name="sensorFeed" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
