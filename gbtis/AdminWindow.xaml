<Window x:Class="gbtis.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gbtis"
        mc:Ignorable="d"
        
        Closed="FileExit_Click"
        Title="Admininstration" Height="600" Width="800">
    <Grid>

        <DockPanel LastChildFill="False">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Exit" Click="FileExit_Click" />
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_About" Click="HelpAbout_Click" />
                </MenuItem>
            </Menu>

            <DockPanel DockPanel.Dock="Top">
                <GroupBox Header="Controls" HorizontalAlignment="Left" Margin="10" Padding="5">
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="3" />
                            </Style>
                        </StackPanel.Resources>

                        <Button Content="Return to Standby" Click="ReturnToStandby_Click" />
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Kinect Playback" HorizontalAlignment="Left" Margin="10" Padding="5">
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="3" />
                            </Style>
                        </StackPanel.Resources>
                        
                        <Button Content="Play neutral" Tag="neutral" Click="Playback_Click" />
                        <Button Content="Play wave" Tag="wave" Click="Playback_Click" />
                    </StackPanel>
                    
                </GroupBox>
            </DockPanel>

            <StatusBar x:Name="statusBar" DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock x:Name="statusText" Text="Loading..."/>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
    </Grid>
</Window>
