<UserControl x:Class="gbtis.Controls.Pip" x:Name="pip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gbtis.Controls"
             mc:Ignorable="d" HorizontalAlignment="Left" VerticalAlignment="Top"
             Height="30" Width="30">
    <UserControl.Background>
        <SolidColorBrush Color="{Binding Path=Color, ElementName=pip}" />
    </UserControl.Background>
    <Viewbox>
        <Border>
            <TextBlock Padding="5" FontWeight="Bold" Foreground="White" Text="{Binding Path=Text, ElementName=pip}">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="2" Direction="0" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>
    </Viewbox>
</UserControl>
