<UserControl x:Class="gbtis.Cursor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gbtis"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Width="100" Height="100">
        <Border x:Name="erase" Background="White" BorderBrush="Black" BorderThickness="1">
            <Grid x:Name="idle" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Line X1="0" Y1="10" X2="20" Y2="10" Stroke="Black" StrokeThickness="1" />
                <Line X1="10" Y1="0" X2="10" Y2="20" Stroke="Black" StrokeThickness="1" />
                
                <Line X1="0" Y1="10" X2="20" Y2="10" Stroke="White" StrokeThickness="1" />
                <Line X1="10" Y1="0" X2="10" Y2="20" Stroke="White" StrokeThickness="1" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
