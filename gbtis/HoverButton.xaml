<UserControl x:Class="gbtis.HoverButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gbtis"
             mc:Ignorable="d"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Border x:Name="borderBox" BorderThickness="4" CornerRadius="2">
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Teal" Offset="0"/>
                    
                    <GradientStop x:Name="progressTeal" Color="Teal" Offset="1"/>
                    <GradientStop x:Name="progressBlack" Color="Black" Offset="1"/>
                    
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <Viewbox>
                    <TextBlock x:Name="textBox" Foreground="Teal" Margin="2,0,2,0" Text="{Binding Text}" />
                </Viewbox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
