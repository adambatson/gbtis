<UserControl x:Class="gbtis.HoverButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gbtis"
             mc:Ignorable="d"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Border x:Name="borderBox" BorderThickness="2" BorderBrush="Teal" CornerRadius="5">
        <Grid>
            <Viewbox>
                <TextBlock x:Name="textBox" Foreground="Teal" Margin="2,0,2,0" Text="{Binding Text}" />
            </Viewbox>
        </Grid>
    </Border>
</UserControl>
